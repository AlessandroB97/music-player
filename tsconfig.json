{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "*": [
                "./node_modules/*",
                "./node_modules/tns-core-modules/*"
            ],
            "stream": [
                "./node_modules/readable-stream/*"
            ],
            "assert": [
                "./node_modules/assert/*"
            ],
            "util": [
                "./node_modules/util/*"
            ],
            "inherits": [
                "./node_modules/inherits/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}